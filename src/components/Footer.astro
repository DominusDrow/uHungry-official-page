<script>
  // Función para mostrar el modal de Privacy
  function handleOpenPrivacyModal() {
    document.getElementById('privacyModal').style.display = 'block';
  }

  // Función para ocultar el modal de Privacy
  function handleClosePrivacyModal() {
    document.getElementById('privacyModal').style.display = 'none';
  }

  // Función para mostrar el modal de Legal
  function handleOpenLegalModal() {
    document.getElementById('legalModal').style.display = 'block';
  }

  // Función para ocultar el modal de Legal
  function handleCloseLegalModal() {
    document.getElementById('legalModal').style.display = 'none';
  }

  // Adjuntar eventos de clic a los enlaces de Privacy y Legal para abrir los modales correspondientes
  document.getElementById('privacyLink').addEventListener('click', handleOpenPrivacyModal);
  document.getElementById('legalLink').addEventListener('click', handleOpenLegalModal);

  // Adjuntar eventos de clic a los botones de cerrar modales
  document.getElementById('closePrivacyModalButton').addEventListener('click', handleClosePrivacyModal);
  document.getElementById('closeLegalModalButton').addEventListener('click', handleCloseLegalModal);
</script>

