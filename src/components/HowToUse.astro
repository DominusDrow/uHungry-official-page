---
import Showcase from '../assets/showcase-two.svg'
import vector3 from '../assets/vector3.png'
---
<input type="checkbox" id="toggle" class="toggle-input">
<label for="toggle" class="toggle-label"></label>

<section class="title-section">
    <p>Usuario</p>
    <p class="admin">Vendedor</p>
</section>


<section id="section1" class="product-defined padded active">
    <!-- Contenido de la primera sección -->
    <section class="product-defined padded">
        <div class="container">
             <div class="row product-brief-items">
                <div class="brief-tab one-half column">
                    <h3 class="h1-title">¿Comó instalarla?</h3>
                    <p class="m-paragraph m-margin">Sigue cada uno de estos sencillos pasos para poder hacer uso de nuestra aplicación.</p>
                    <ol class="row">
                        <li class="one-third column"><a href="#">Instala la aplicación desde tu tienda de aplicaciones</a></li>
                        <li class="one-third column"><a href="#">Registrate usando tu correo institucional</a></li>
                        <li class="one-third column"><a href="#">Listo, ahora eres usuario de uHungry?</a></li>
                    </ol>
                </div>
                <div class="brief-media center one-half column">
                    <img src={Showcase} alt="Showcase mockup">
                </div>
            </div>
        </div>
    </section>
</section>

<section id="section2" class="product-defined padded">
    <!-- Contenido de la segunda sección -->
    <section class="product-defined padded">
        <div class="container">
             <div class="row product-brief-items">
                <div class="brief-tab one-half column">
                    <h3 class="h1-title">¿Comó instalarla?</h3>
                    <p class="m-paragraph m-margin">Sigue cada uno de estos sencillos pasos para poder hacer uso de nuestra aplicación.</p>
                    <ol class="row">
                        <li class="one-third column"><a href="#">Instala la aplicación desde tu tienda de aplicaciones</a></li>
                        <li class="one-third column"><a href="#">Registrate usando tu cuenta de google</a></li>
                        <li class="one-third column"><a href="#">Registra tu negocio</a></li>
                        <li class="one-third column"><a href="#">Listo, bienvenido a uHungry?</a></li>
                    </ol>
                </div>
                <div class="brief-media center one-half column">
                    <img src={Showcase} alt="Showcase mockup">
                </div>
            </div>
        </div>
    </section>
</section>



<style lang="scss">

.product-defined{  
    .brief-media img{
      width: 400px;
      @media (max-width:700px) {
        width: 300px;
      }
    }
    .brief-tab{
        padding-top: 50px;
    }
    ol{
        counter-reset: step;
        align-items: center;
        list-style: none;
        >li{
            padding-left: 40px;
            position: relative;
            &::before{
                counter-increment: step;
                content: counter(step);
                width: 26px;
                height: 26px;
                position: absolute;
                left: 0;
                top: 50%;
                margin-top: -13px;
                text-align: center;
                font-size: 13px;
                line-height: 1.8em;
                border: 2px solid #000;
                font-weight: 700;
                border-radius: 8px;
            }
            a{
                text-decoration: none;
                color: #000;
            }
        }
        @media (max-width:700px) {
            gap: 10px;
            .column{
                width: 33%;
                padding-left: 30px;
                &::before{
                    width: 18px;
                    height: 18px;
                    font-size: 10px;
                }
                a{
                    font-size: 1.3rem;
                }
            }
        }
    }


  }

/* Estilo del toggle switch */
.toggle-input {
    display: none;
    opacity: 0;
}

.toggle-label {
    display: block;
    width: 60px;
    height: 30px;
    background-color: #3e7afc;
    border-radius: 15px;
    position: absolute;
    top: 1700px; /* Ajusta según sea necesario para colocarlo justo encima de las secciones */
    left: 50%;
    transform: translateX(-50%);
    cursor: pointer;
}

.toggle-label:before {
    content: '';
    position: absolute;
    width: 30px;
    height: 30px;
    background-color: #ffffff;
    border-radius: 50%;
    transition: transform 0.2s ease;
}

.toggle-input:checked + .toggle-label:before {
    transform: translateX(30px);
}

/* Ocultar la segunda sección por defecto */
#section2 {
    display: none;
}

/* Mostrar la segunda sección si el toggle está activado */
.toggle-input:checked ~ #section2 {
    display: block;
}

/* Ocultar la primera sección si el toggle está activado */
.toggle-input:checked ~ #section1 {
    display: none;
}

.title-section p {
    font-size: 25px; /* Tamaño de la fuente */
    color: rgb(44, 44, 44); /* Color del texto */

    /* Estilos para posicionar el texto en un lugar específico de la pantalla */
    position: absolute; /* Establece la posición absoluta */
    top: 1698px; /* Distancia desde la parte superior */
    left: 45%; /* Alinea el texto en el centro horizontalmente */
    transform: translateX(-50%); /* Centra el texto horizontalmente */
}

.title-section .admin {
    font-size: 25px; /* Tamaño de la fuente */
    color: rgb(44, 44, 44); /* Color del texto */

    /* Estilos para posicionar el texto en un lugar específico de la pantalla */
    position: absolute; /* Establece la posición absoluta */
    top: 1698px; /* Distancia desde la parte superior */
    left: 56%; /* Alinea el texto en el centro horizontalmente */
    transform: translateX(-50%); /* Centra el texto horizontalmente */
}
</style>